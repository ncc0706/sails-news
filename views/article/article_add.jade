extends ../custom
block title
  title 添加文章
block styles
  link(rel='stylesheet' href='/vendor/wangEditor/css/wangEditor.min.css')
block body
  .container(style='margin-top: 30px;')
    form.form-horizontal#articleForm(role='form' action='/article/addArticle', method='post')
      .form-group
        label.col-sm-2.control-label 标题
        .col-sm-10
          input.form-control(type='text' name='title' required)
      .form-group
        label.col-sm-2.control-label 关键词
        .col-sm-10
          input.form-control(type='text' name='keywords' required)
      .form-group
        label.col-sm-2.control-label 描述
        .col-sm-10
          input.form-control(type='text' name='description' required)
      .form-group
        label.col-sm-2.control-label 摘要
        .col-sm-10
          input.form-control(type='text' name='summary' required)
      .form-group
        label.col-sm-2.control-label 文章内容
        .col-sm-10
          textarea.form-control(id='content' row=3 required)
          input(type='hidden' name='content' id="acontent")
      .form-group
        .col-sm-offset-2.col-sm-10
          button.btn.btn-primary#saveArticle(type='button') 保存

block javascript
  script(charset='UTF-8' src='/vendor/wangEditor/js/wangEditor.js')
  script(charset='UTF-8' src='/articles/article.js')
